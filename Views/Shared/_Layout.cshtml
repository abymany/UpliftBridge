@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UpliftBridge</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)

    <style>
        /* =========================
           NAVBAR: BRAND + CTA SYSTEM
           ========================= */

        .kg-navbar {
            /* keep your dark bar clean */
        }

        /* Brand lockup: icon + wordmark should feel like ONE unit */
        .kg-navbar .kg-brand-fixed{
            display: inline-flex !important;
            align-items: center !important;
            gap: 8px !important;              /* tighter so UB + text unify */
            text-decoration: none !important;
            padding: 0 !important;
            margin: 0 !important;

            font-family: Nunito, system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif !important;
            font-size: 1.45rem !important;
            font-weight: 800 !important;
            line-height: 1 !important;
            white-space: nowrap !important;
        }

        .kg-navbar .kg-brand-logo{
            height: 58px !important;          /* larger, consistent */
            width: auto !important;
            display: block !important;
        }

        .kg-navbar .kg-brand-name{
            color: #E6C37A !important;        /* your gold */
            letter-spacing: 0.02em !important;
            line-height: 1 !important;
            text-transform: none !important;
            font-style: normal !important;
        }

        /* Keep nav links from looking cramped */
        .kg-navbar .navbar-nav .nav-link{
            font-weight: 600;
            opacity: .92;
        }
        .kg-navbar .navbar-nav .nav-link:hover{
            opacity: 1;
        }

        /* CTA button: match brand gold & height */
        .kg-navbar .kg-cta{
            display: inline-flex !important;
            align-items: center !important;
            justify-content: center !important;
            height: 44px !important;          /* matches visual weight of logo */
            padding: 0 18px !important;
            border-radius: 999px !important;

            background: #E6C37A !important;   /* same gold as brand */
            border: 1px solid rgba(0,0,0,.15) !important;
            color: #1a1a1a !important;

            font-family: Nunito, system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif !important;
            font-weight: 800 !important;
            font-size: 1rem !important;
            line-height: 1 !important;

            text-decoration: none !important;
            white-space: nowrap !important;
        }

        .kg-navbar .kg-cta:hover{
            filter: brightness(0.95);
            color: #1a1a1a !important;
            text-decoration: none !important;
        }

        /* Align brand left + CTA right cleanly */
        .kg-navbar .kg-nav-wrap{
            display: flex;
            align-items: center;
            width: 100%;
        }
        .kg-navbar .kg-left{
            display: flex;
            align-items: center;
            gap: 18px;
        }
        .kg-navbar .kg-right{
            margin-left: auto;
            display: flex;
            align-items: center;
            gap: 18px;
        }

        /* Keep collapse area sane on mobile */
        @@media (max-width: 991.98px){
            .kg-navbar .kg-nav-wrap{
                flex-wrap: wrap;
            }
            .kg-navbar .kg-right{
                width: 100%;
                margin-left: 0;
                margin-top: 10px;
                justify-content: flex-start;
            }
            .kg-navbar .kg-cta{
                width: 100%;
                justify-content: center;
            }
        }
    </style>
</head>

<body>
<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark kg-navbar">
        <div class="container">
            <div class="kg-nav-wrap">

                <!-- LEFT: Brand -->
                <div class="kg-left">
                    <a class="navbar-brand kg-brand-fixed"
                       asp-controller="Home"
                       asp-action="Index"
                       aria-label="UpliftBridge home">
                        <img class="kg-brand-logo" src="~/images/ub-logo.png" alt="UpliftBridge" />
                        <span class="kg-brand-name">UpliftBridge</span>
                    </a>
                </div>

                <!-- Toggler -->
                <button class="navbar-toggler ms-auto" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarContent"
                        aria-controls="navbarContent"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- RIGHT: Links + CTA -->
                <div class="collapse navbar-collapse" id="navbarContent">
                    <div class="kg-right w-100 w-lg-auto">
                        <ul class="navbar-nav ms-lg-auto align-items-lg-center gap-lg-2">
                            <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Needs" asp-action="Index">Needs</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Needs" asp-action="Create">Post a Need</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Stories" asp-action="Index">Success Stories</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Verification">How Verification Works</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Why">Why UpliftBridge</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Faq">FAQ</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Schools">For Schools & Coaches</a></li>
                        </ul>

                        <a class="kg-cta"
                           asp-controller="Gift"
                           asp-action="Index">
                            Give a Gift
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
@await RenderSectionAsync("Scripts", required: false)

</body>
</html>