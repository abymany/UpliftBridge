@model List<UpliftBridge.Models.Pledge>

@{
    ViewData["Title"] = "Admin â€” Pledges";
    var key = Context.Request.Query["key"].ToString();
    ViewBag.AdminKey = key;
}

<div class="kg-wrap kg-shell">
    <div class="kg-glass">
        <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
            <div>
                <div class="kg-kicker">ADMIN</div>
                <h1 class="kg-title">Pledges</h1>
                <p class="kg-muted mb-0">Transparency view (demo).</p>
            </div>

            <partial name="_AdminLinks" />
        </div>

        <hr style="border-color: rgba(255,255,255,.12);" />

        <div class="kg-card-light">
            <div class="table-responsive">
                <table class="table mb-0 kg-table">
                    <thead>
                        <tr>
                            <th style="width:70px;">ID</th>
                            <th>Need</th>
                            <th style="width:120px;">Amount</th>
                            <th style="width:120px;">Fee</th>
                            <th style="width:120px;">Total</th>
                            <th style="width:160px;">Status</th>
                            <th>Donor</th>
                            <th style="width:160px;">Created</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model == null || Model.Count == 0)
                        {
                            <tr>
                                <td colspan="8" class="text-center text-muted p-4">No pledges yet.</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var p in Model)
                            {
                                <tr>
                                    <td class="text-muted">#@p.Id</td>
                                    <td>
                                        <div style="font-weight:900;">@p.NeedTitleSnapshot</div>
                                        <div class="small text-muted">NeedId: @p.NeedId</div>
                                    </td>
                                    <td>@p.Amount.ToString("C")</td>
                                    <td class="text-muted">@p.PlatformFee.ToString("C")</td>
                                    <td style="font-weight:900;">@p.TotalAmount.ToString("C")</td>
                                    <td><span class="badge bg-secondary">@p.Status</span></td>
                                    <td class="small">
                                        @if (string.IsNullOrWhiteSpace(p.DonorName) && string.IsNullOrWhiteSpace(p.DonorEmail))
                                        {
                                            <span class="text-muted">Anonymous / not provided</span>
                                        }
                                        else
                                        {
                                            <div>@p.DonorName</div>
                                            <div class="text-muted">@p.DonorEmail</div>
                                        }
                                    </td>
                                    <td class="small text-muted">@p.CreatedAt.ToLocalTime().ToString("g")</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-3">
            <a class="kg-btn kg-btn-ghost"
               asp-controller="Admin" asp-action="Index"
               asp-route-key="@key">Back to Admin</a>
        </div>
    </div>
</div>