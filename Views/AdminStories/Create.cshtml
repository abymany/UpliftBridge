@model UpliftBridge.Models.Story
@{
    ViewData["Title"] = "Admin — Create Story";
    var key = Context.Request.Query["key"].ToString();
}

<style>
    /* ✅ Fix: some parent containers likely have overflow hidden */

    .kg-admin-form {
        padding: 2.25rem 2rem;
        overflow: visible !important;
    }

    /* ✅ Fix: labels need a real line box + breathing room */
    .kg-admin-form .form-label {
        display: inline-block;
        padding-top: .35rem;
        margin-bottom: .4rem;
        margin-left: .1rem;
        line-height: 1.15;
        font-weight: 850;
    }

    .kg-admin-form .row.g-3 { margin-top: 0; }
    .kg-admin-form .row.g-3 > * { padding-top: .25rem; }
</style>

<div class="kg-wrap kg-shell">
    <div class="kg-glass">
        <div class="d-flex align-items-center justify-content-between flex-wrap gap-2">
            <div>
                <div class="kg-kicker">ADMIN</div>
                <h1 class="kg-title">Create Story</h1>
            </div>
            <a class="kg-btn kg-btn-ghost" asp-action="Index" asp-route-key="@key">Back</a>
        </div>

        <hr style="border-color: rgba(255,255,255,.12);" />

        <div class="kg-card-light">
            <div class="kg-admin-form">
                <form method="post" asp-action="Create" asp-route-key="@key">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label class="form-label" asp-for="Title"></label>
                        <input class="form-control" asp-for="Title" />
                        <span class="text-danger" asp-validation-for="Title"></span>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label" asp-for="Category"></label>
                            <input class="form-control" asp-for="Category" />
                            <span class="text-danger" asp-validation-for="Category"></span>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label" asp-for="Location"></label>
                            <input class="form-control" asp-for="Location" />
                            <span class="text-danger" asp-validation-for="Location"></span>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label" asp-for="VerificationLabel"></label>
                            <input class="form-control" asp-for="VerificationLabel" />
                            <span class="text-danger" asp-validation-for="VerificationLabel"></span>
                        </div>
                    </div>

                    <div class="mt-3">
                        <label class="form-label" asp-for="Tagline"></label>
                        <input class="form-control" asp-for="Tagline" />
                        <span class="text-danger" asp-validation-for="Tagline"></span>
                    </div>

                    <div class="mt-3">
                        <label class="form-label" asp-for="ShortSummary"></label>
                        <textarea class="form-control" asp-for="ShortSummary" rows="2"></textarea>
                        <span class="text-danger" asp-validation-for="ShortSummary"></span>
                    </div>

                    <div class="row g-3 mt-1">
                        <div class="col-md-6">
                            <label class="form-label" asp-for="CoverImagePath"></label>
                            <input class="form-control" asp-for="CoverImagePath" />
                            <span class="text-danger" asp-validation-for="CoverImagePath"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label" asp-for="GalleryImagePaths"></label>
                            <input class="form-control" asp-for="GalleryImagePaths" />
                            <div class="form-text">Semicolon separated paths</div>
                            <span class="text-danger" asp-validation-for="GalleryImagePaths"></span>
                        </div>
                    </div>

                    <div class="mt-3">
                        <label class="form-label" asp-for="Body"></label>
                        <textarea class="form-control" asp-for="Body" rows="8"></textarea>
                        <span class="text-danger" asp-validation-for="Body"></span>
                    </div>

                    <div class="mt-4 d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a class="btn btn-outline-secondary" asp-action="Index" asp-route-key="@key">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
