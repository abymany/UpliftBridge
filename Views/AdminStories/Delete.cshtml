@model UpliftBridge.Models.Story

@{
    ViewData["Title"] = "Delete Story";
    ViewData["BodyClass"] = "stories-body";
}

<div class="container pb-4">
    <h1 class="mb-3" style="font-family:'Playfair Display',serif;">Delete Story</h1>

    <div class="card p-4">
        <p>Are you sure you want to delete this story?</p>
        <h3 style="font-family:'Playfair Display',serif;">@Model.Title</h3>

        <form asp-controller="AdminStories" asp-action="Delete" asp-route-id="@Model.Id" method="post" class="mt-3">
            @Html.AntiForgeryToken()
            <button class="btn btn-danger rounded-pill" type="submit">Yes, delete</button>
            <a class="btn btn-outline-secondary rounded-pill" asp-controller="AdminStories" asp-action="Index">Cancel</a>
        </form>
    </div>
</div>
