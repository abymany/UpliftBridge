@model UpliftBridge.Models.Story
@{
    ViewData["Title"] = "Admin â€” Edit Story";
    var key = Context.Request.Query["key"].ToString();
}

<div class="kg-wrap kg-shell">
    <div class="kg-glass">
        <div class="d-flex align-items-center justify-content-between flex-wrap gap-2">
            <div>
                <div class="kg-kicker">ADMIN</div>
                <h1 class="kg-title">Edit Story</h1>
            </div>
            <a class="kg-btn kg-btn-ghost" asp-action="Index" asp-route-key="@key">Back</a>
        </div>

        <hr style="border-color: rgba(255,255,255,.12);" />

        <div class="kg-card-light">
            <form method="post" asp-action="Edit" asp-route-id="@Model.Id" asp-route-key="@key">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label class="form-label">Title</label>
                    <input class="form-control" asp-for="Title" />
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>

                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Category</label>
                        <input class="form-control" asp-for="Category" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Location</label>
                        <input class="form-control" asp-for="Location" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Verification Label</label>
                        <input class="form-control" asp-for="VerificationLabel" />
                    </div>
                </div>

                <div class="mt-3">
                    <label class="form-label">Tagline</label>
                    <input class="form-control" asp-for="Tagline" />
                </div>

                <div class="mt-3">
                    <label class="form-label">Short Summary</label>
                    <textarea class="form-control" asp-for="ShortSummary" rows="2"></textarea>
                </div>

                <div class="row g-3 mt-1">
                    <div class="col-md-6">
                        <label class="form-label">Cover Image Path</label>
                        <input class="form-control" asp-for="CoverImagePath" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Gallery Image Paths (semicolon separated)</label>
                        <input class="form-control" asp-for="GalleryImagePaths" />
                    </div>
                </div>

                <div class="mt-3">
                    <label class="form-label">Body</label>
                    <textarea class="form-control" asp-for="Body" rows="8"></textarea>
                    <span class="text-danger" asp-validation-for="Body"></span>
                </div>

                <div class="mt-4 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a class="btn btn-outline-secondary" asp-action="Index" asp-route-key="@key">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
