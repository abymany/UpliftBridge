@model UpliftBridge.Models.Need

@{
    ViewData["Title"] = "Need submitted";
}

<div class="kg-wrap kg-shell">
  <div class="kg-glass">
    <h1 class="kg-title">Thanks — your need is submitted</h1>
    <p class="kg-muted">It’s pending review. Once approved, it will appear publicly on the Needs page.</p>

    <div class="kg-card-light mt-3 p-3">
      <div><strong>Title:</strong> @Model.Title</div>
      <div><strong>Category:</strong> @Model.Category</div>
      <div><strong>Location:</strong> @Model.Location</div>
    </div>

    <div class="mt-3">
      <a class="kg-btn" asp-controller="Needs" asp-action="Index">Back to Needs</a>
    </div>
  </div>
</div>
